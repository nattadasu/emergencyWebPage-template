{
  //Remove ruler
  "[json]": {
    "editor.rulers": [
    ],
    "editor.wordWrap": "on"
  },
  "[html]": {
    "editor.rulers": [
      {
        "column": 100
      }
    ]
  },
  "editor.rulers": [
    {
      "column": 80
    }
  ],
  "markdownlint.config": {
    "no-inline-html": false,
    "single-trailing-newline": false,
    "no-multiple-blanks": {
      "maximum": 1
    },
    "no-blanks-blockquote": false,
    "no-trailing-punctuation": false,
    "ol-prefix": false,
    "line-length": {
      "line_length": 100,
      "tables": false
    }
  },
  "json.schemas": [
    {
      "fileMatch": [
        "main.webmanifest"
      ],
      "url": "./schema/webmanifest.json"
    }
  ],
  "yaml.schemas": {
    "./schema/metadata.json": "./_metadata.yaml"
  },
  "cSpell.import": [
    "config/.cspell.json"
  ]
}